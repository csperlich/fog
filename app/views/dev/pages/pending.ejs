<!DOCTYPE html>
<html>
  <head>
    <% include ../../common/partials/head %>
    <link rel="stylesheet" href="/styles/forums.css">
    <script type="text/javascript" src="/helpers/games/pendingGameHelper.js"></script>
    <title>fog | add a game</title>
  </head>
  <body>

    <header>
      <% include ../../common/partials/header %>
    </header>

    <main>
      <div class="inner-content">
        <h1><%= game.title %></h1>

        <div class="padded">

          <p class="deemphasized">[status: <%= status %>]</p>
          <h3>Description</h3>
          <p class="padded"><%= game.description %></p>

          <h3>Instructions to Fog</h3>
          <p class="padded"><%= game.instructions %></p>

          <h3>Game File</h3>
          <p  class="padded">
            Download: <a href="/uploads/games/pending/<%= game.files.compressed %>">file</a>
          </p>

          <% if (status === 'pending') { %>

            <a id="accept-game" class="emphasized" data-id="<%= game._id %>">Accept</a>

          <% } %>

        </div>

      </div>
    </main>

    <footer>
      <% include ../../common/partials/footer %>
    </footer>

  </body>
</html>
