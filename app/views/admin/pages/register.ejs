<!DOCTYPE html>
<html>

  <head>
    <% include ../../common/partials/head %>
    <link rel="stylesheet" href="/styles/register.css">
    <script type="text/javascript" src="/helpers/register/newUserHandler.js"></script>
    <title>fog | new admin token</title>
  </head>

  <body>

    <header>
      <% include ../../common/partials/header %>
    </header>

    <main>
      <div class="inner-content">

        <form class="" method="post">
          <p>
            Looks like you're a new hire! Fill in some info so we can get to know you!
          </p>

          <%
            var fields = [
              {
                name: 'username',
                label: 'username'
              },
              {
                name: 'password',
                label: 'password',
                type: 'password'
              },
              {
                name: 'firstName',
                label: 'first name',
                value: admin.firstName
              },
              {
                name: 'lastName',
                label: 'last name',
                value: admin.lastName
              },
              {
                name: 'email',
                label: 'email',
                value: admin.email,
                type: 'email',
                pattern: '[\\w\\d\\._]+@[\\w\\d\\._]+?\\.[\\w\\d\\._]+'
              },
              {
                name: 'phoneNumber',
                label: 'phone number',
                pattern: '\\(?(\\d{3})\\)?[\\. -]?\\d{3}[\\. -]?\\d{4}'
              }
            ];
          %>

          <% fields.forEach(function(field) { %>
            <input type="text"
                id="<%= field.name %>"
                name="<%= field.name %>"
                class="input"
                placeholder="<%= field.label || '' %>"
                type="<%= field.type || 'text' %>"
                value="<%= field.value || '' %>"
                required />
              <label for="<%= field.name %>"><%= field.label %></label>
            <br />
          <% }); %>
          <input type="hidden" name="_id" value="<%= admin._id %>" />
          <input type="submit" id="submit-admin" value="Register">
        </form>

      </div> <!-- end inner-content -->
    </main>

    <footer>
      <% include ../../common/partials/footer %>
    </footer>

  </body>

</html>
