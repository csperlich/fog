<!DOCTYPE html>
<html>
  <head>
    <% include ../../common/partials/head %>
    <link rel="stylesheet" href="/styles/shoelace.css">
    <title>fog | add credit card</title>
  </head>
  <body>

    <header>
      <% include ../../common/partials/header %>
    </header>

    <main>

      <div class="inner-content">
        <div class="col-12">
          <h2>Add a Credit Card</h2>
        </div>
        <form action="<%= action %>" method="<%= method %>" class="little-guy" id='card-form'>
          <% fields.forEach(function(field) { %>
            <div class="col-<%= field.width || 12 %>">
              <% if (field.type === 'select') {  %>
                <select form="card-form" name="<%= field.name %>">
                  <% field.options.forEach(function(option) { %>
                    <option name="<%= field.name %>"
                        value="<%= option.value %>"><%= option.display %></option>
                  <% }); %>
                </select>
              <% } else { %>
                <input type="text"
                    id="<%= field.name %>"
                    name="<%= field.name || field %>"
                    class="input"
                    placeholder="<%= field.placeholder || field.label || field %>"
                    type="<%= field.type || 'text' %>"
                    value="<%= values[field.name] || '' %>"
                    <% if (field.pattern) { %>
                      pattern="<%= field.pattern %>"
                    <% } %>
                    required />
              <% } %>
              <label for="<%= field.name %>"><%= field.label %></label>
            </div>
          <% }); %>
          <div class="col-4">
            <input id="submit-card" type="submit" value="add card">
          </div>

        </form>

      </div>

    </main>
  </body>
</html>
